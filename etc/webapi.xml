<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="GET" url="V1/testwebapi/customerdata/:customerId">
        <service class="MagentoPlus\DataBases\Api\TestWebApiInterface" method="getCustomerData"/>
        <resources>
            <resource ref="anonumys"/>
        </resources>
    </route>
    <route method="POST" url="V1/testwebapi/setcustomerdata/">
        <service class="MagentoPlus\DataBases\Api\TestWebApiInterface" method="setCustomerData"/>
        <resources>
            <resource ref="anonumys"/>
        </resources>
    </route>
    <route method="POST" url="V1/testwebapi/setcustomerdata/:customerId">
        <service class="MagentoPlus\DataBases\Api\TestWebApiInterface" method="setCustomerDataWithParam"/>
        <resources>
            <resource ref="anonumys"/>
        </resources>
    </route>
</routes>